<h1>Editar producto</h1>

<% if (typeof error !== 'undefined') { %>
  <div style="color: red; margin-bottom: 10px;"><%= error %></div>
<% } %>

<form action="/products/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
  <input type="text" name="name" value="<%= product.name %>" required><br>
  <input type="number" step="0.01" name="price" value="<%= product.price %>" required><br>
  <input type="number" name="discount" value="<%= product.discount %>"><br>
  <textarea name="description"><%= product.description %></textarea><br>
  <img src="/img/products/<%= product.image %>" width="100"><br>
  <input type="file" name="image"><br>
  <input type="hidden" name="oldImage" value="<%= product.image %>">

  <label>Categor√≠a:</label>
  <select name="category" required>
    <% categories.forEach(c => { %>
      <option value="<%= c.id %>" <%= product.categoryId == c.id ? "selected" : "" %>><%= c.name %></option>
    <% }) %>
  </select><br>

  <button type="submit">Actualizar</button>
</form>
